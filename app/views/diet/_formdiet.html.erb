<% if notice.present?%>
    <div class="alert alert-danger "><h3><%= notice%></h3></div>
<%end%>
<%= form_with(url: diet_index_path, scope: :diet, local: true) do |f| %>
    <div class="row ">
        <div class="col-sm-6">
            <div class="col-sm-8">
                <%= f.label :start_date, "Data de Inicio" %><%=f.date_field :start_date %>
            </div>
        </div>
        <div class="col-sm-6">
            <div class="col-sm-8">
                <%= f.label :start_date, "Data de Fim" %><%=f.date_field :end_date %>
            </div>
        </div>
    </div>
    <div class="row ">
        <div class="col-sm-6">
            <div class="col-sm-6">
                <%= f.label :starting_weight, "Peso" %><%=f.text_field :starting_weight %>
            </div>
        </div>
        <div class="col-sm-6">
            <div class="col-sm-6">
                <%= f.label :height, "Altura" %><%=f.text_field :height %>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-6">
            <div class="col-sm-6">
                <%= f.label :ideal_weight, "Peso Ideal" %><%=f.text_field :ideal_weight %>
            </div>
        </div>
        <div class="col-sm-6 ">
             <div class="col-sm-6 ">
                <%= f.submit "Salvar", class: "fadeIn first" %>
            </div>
        </div>
    </div>
<% end %>